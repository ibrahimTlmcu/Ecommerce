@model List<ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "ProductListWithCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h1>Ürün EKleme</h1>

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Basic Tables</h4>
                <p>For basic styling&mdash;light padding and only horizontal dividers&mdash;add the base class <code>.table</code> to any <code>&lt;table&gt;</code>. It may seem super redundant, but given the widespread use of tables for other plugins like calendars and date pickers, we've opted to isolate our custom table styles.</p>
                <div class="bs-example" data-example-id="simple-table">
                    <table class="table">
                        <caption>
                            Optional table caption.
                        </caption>
                        <thead>
                            <tr>

                                <th>#</th>
                                <th>Urun Adi</th>
                                <th>Urun Fiyati</th>
                                <th>Urun Kategori</th>
                                <th>Sil</th>
                                <th>Guncelle</th>
                                <th>Ürün Görselleri</th>
                                <th>Açıklama ve Bilgi</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductPrice</td>
                                    <td>@item.Category.CategoryName</td>

                                 
                                    <td><a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
                                    <td><a href="/Admin/ProductImage/ProductImageDetail/@item.ProductId" class="btn btn-warning">Ürün Görselleri</a></td>
                                    <td><a href="/Admin/ProductDetail/ProductDetail/@item.ProductId" class="btn btn-info">Açıklama ve Bilgi</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Admin/Product/CreateProduct" class="btn btn-primary"> Yeni Urun Girisi </a>
                </div>
            </div>
        </div>

    </div>
</section>

