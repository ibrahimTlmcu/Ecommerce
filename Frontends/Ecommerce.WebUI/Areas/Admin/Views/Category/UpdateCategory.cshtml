@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>UpdateCategory</h1>

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Guncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <label>Kategori Id</label>
                        <input type="text" readonly class="form-control" asp-for="CategoryId" />
                        <br />
                        <label>Kategori Adi</label>
                        <input type="text" readonly class="form-control" asp-for="CategoryName" />

                        <br />
                        <button class="btn btn-primary">Kategoriyi Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>